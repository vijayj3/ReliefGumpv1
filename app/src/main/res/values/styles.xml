<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#424242</item>
        <item name="colorPrimaryDark">#424242</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="number_style" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#9E9E9E</item>
        <item name="android:textSize">35sp</item>
    </style>

    <style name="button_style" parent="@android:style/TextAppearance.Medium">
        <item name="android:background">#9E9E9E</item>
        <item name="android:textColor">#424242</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
